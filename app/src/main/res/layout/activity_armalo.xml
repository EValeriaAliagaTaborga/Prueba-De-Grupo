<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lyHorizontalPrincipal"
    tools:context="titaniumstudios.myapplication2.ArmaloActivity">

    <ScrollView
        android:id="@+id/lista_ingredientes"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:srcCompat="@drawable/pizza_menu"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/imgCarneRes"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ham_queso"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/imgCarnePollo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:srcCompat="@drawable/fondo_comida"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/imgCarneVegetariana"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ham_doble"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/imgQueso"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                app:srcCompat="@drawable/ham_menu"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/imgVegetales"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:srcCompat="@drawable/pizza_menu"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/imgAdherezo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ham_menu"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/imgOtrasCarnes"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ham_queso"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/imgHuevo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:srcCompat="@drawable/cubo1" />


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8">

        <TextView
            android:id="@+id/lblPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:text="0.00"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/lyHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_above="@+id/btnfCarrito"
            android:layout_below="@+id/lblPrecio"
            android:weightSum="1">

            <ScrollView
                android:id="@+id/scrVistaArmado"
                android:layout_width="127dp"
                android:layout_height="371dp"
                android:layout_above="@+id/btnfCarrito"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lblPrecio">

                <LinearLayout
                    android:id="@+id/lyVertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>

            <ListView
                android:id="@+id/lista"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@+id/btnfCarrito"
                android:layout_alignStart="@+id/lblPrecio"
                android:layout_below="@+id/lblPrecio"
                android:textAlignment="textStart"
                android:textSize="4sp" />

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnfCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/lblPrecio"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="35dp"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@drawable/cubo" />

        <!--
        <AdapterViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnfCarrito"
            android:layout_below="@+id/lblPrecio"
            android:layout_alignStart="@+id/lblPrecio"
            android:background="@color/colorPrimaryDark"/>
-->
    </RelativeLayout>


</LinearLayout>
