<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="titaniumstudios.myapplication2.DatosYFacturacionActivity"
    android:background="@drawable/backgrounddefault2">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblNombreOApellido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre y/o Apellido del Cliente"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtNombreOApellido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Ej.: Familia Rubik. (Dato para Entrega)"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/lblNombreFac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre para la Factura"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtNombreFac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Ej.: Rubik's Delivery and Food"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/lblCelularOTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Celular o Teléfono fijo"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editText7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Ej.: 60000077"
                        android:inputType="phone"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/lblDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dirección de Entrega"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Ej.: Calle 6 Colores, 1778"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/lblEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Ej.: rubiks.deliveryandfood@example.com"
                        android:inputType="textEmailAddress"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/lblNIT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NIT o Carnet"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtNIT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Ej.: 1000000000"
                        android:inputType="number"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnEnviar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Enviar" />

                </LinearLayout>

</ScrollView>
